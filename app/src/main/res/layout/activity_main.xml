<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context=".Calc"
    >

    <TextView android:hint="" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center"
        android:paddingTop="10dp"
        android:id="@+id/result"
        android:textSize="40sp"


        android:clickable="true" />

    <LinearLayout
        android:layout_weight="20"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <Button
            android:text="7"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/seven"/>
        <Button
            android:text="8"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eight"/>

        <Button
            android:text="9"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/nine"/>
        <Button
            android:textSize="30sp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dec"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="CLR" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="20"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <Button
            android:text="4"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/four"/>
        <Button
            android:text="5"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/five"/>

        <Button
            android:text="6"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/six"/>
        <Button
            android:text="-"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sub"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="20"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <Button
            android:text="1"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/one"/>
        <Button
            android:text="2"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/two"/>

        <Button
            android:text="3"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/three"/>
        <Button
            android:text="*"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mul"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="20"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <Button
            android:text="0"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/zero"/>
        <Button
            android:text="/"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/div"/>
        <Button
            android:text="+"
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/plus"/>
        <Button
            android:text="="
            android:textSize="40dp"
            android:layout_weight="25"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/equal"/>
    </LinearLayout>
</LinearLayout>
